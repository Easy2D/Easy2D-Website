<!DOCTYPE html>
<html>
<head>
	<!-- Standard Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="keywords"content="<%- config.keywords %>">
	<meta name="description" content="<%- config.description %>">
	<%
    var title = page.title;

    if (is_archive()){
        title = __('官方资讯');
    } else if (is_category()){
        title = __('category') + ': ' + page.category;
    } else if (is_tag()){
        title = __('tag') + ': ' + page.tag;
    }
    %>
    <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
	
    
	<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
	<link href="https://cdn.bootcss.com/semantic-ui/2.2.13/semantic.min.css" rel="stylesheet">
	<script src="https://cdn.bootcss.com/semantic-ui/2.2.13/semantic.min.js"></script>
	<!--
	<%- js('libs/jquery/2.1.3/jquery.min') %>
	<%- js('libs/semantic/semantic.min') %>
	<%- css('libs/semantic/semantic.min') %>
	-->
	<script src="//cdn1.lncld.net/static/js/3.0.4/av-min.js"></script>
	<script>AV.init({appId: 'zJP8mgDyy0AdYxiVkIumCsPO-gzGzoHsz',appKey: 'm79XePr5OoBF5bjcsTcTTAb1'})</script>
	<script src="/js/lcpv.js"></script>
	
	<%- css('css/style') %>
	<%- js('js/script') %>

    <% if (theme.rss){ %>
        <link rel="alternate" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
    <% } %>
    <% if (theme.favicon){ %>
		<link rel="Shortcut Icon" href="<%- theme.favicon %>" type="image/ico">
    <% } %>
</head>

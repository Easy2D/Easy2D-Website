.masthead.segment
	min-height: 700px
	padding: 1em 0em

.masthead
	.index-header-buttons
		margin-top: 14px
	h1.ui.header
		margin-top: 3em
		margin-bottom: 0em
		font-size: 4em
		font-weight: normal
	h2
		font-size: 1.7em
		font-weight: normal

.ui.vertical.stripe
	padding: 5em 0em
	h3
		font-size: 1.8rem
	.button + h3, p + h3
		margin-top: 3em
	.floated.image
		clear: both
	p
		font-size: 1.2rem
	.horizontal.divider
		margin: 3em 0em

.quote.stripe.segment 
	padding: 0em
	.grid .column 
		padding: 5em 4em

.ui.piled.segment
	padding: 2.5em 3.5em
	ul
		word-wrap: break-word

@media only screen and (max-width: 700px)
	.masthead.segment 
		min-height: 450px
	.masthead h1.ui.header 
		font-size: 2em
		margin-top: 1.5em
	.masthead h2 
		margin-top: 0.5em
		font-size: 1.5em
	.masthead .ui.container .ui.button 
		margin: 0.5em
		width: 85%
	.index-questionnaire .index-advice-buttons 
		text-align: center
		.button
			margin-top: 10px
			width: 70%
	.index-readmore
		text-align: center
	.index-epimg
		text-align: center
	.ui.piled.segment
		padding: 1.5em 1em